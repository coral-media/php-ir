{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "collection_id",
    "language",
    "weighting",
    "dimension",
    "documents"
  ],
  "properties": {
    "collection_id": { "type": "string" },
    "language": { "type": "string" },
    "weighting": { "type": "string" },
    "dimension": {
      "type": "integer",
      "minimum": 1
    },
    "documents": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "additionalProperties": {
          "type": "number"
        }
      }
    }
  }
}
