{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["collection_id", "language", "tokenizer", "documents"],
  "properties": {
    "collection_id": { "type": "string" },
    "language": { "type": "string" },
    "tokenizer": { "type": "string" },
    "documents": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "minProperties": 1,
        "additionalProperties": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
