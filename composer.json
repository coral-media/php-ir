{
  "name": "coral-media/php-ir",
  "description": "Information Retrieval algorithms (vector space, similarity, clustering)",
  "keywords": [
    "information-retrieval",
    "text-similarity",
    "cosine-similarity",
    "tf-idf",
    "vector-space-model",
    "clustering",
    "k-means",
    "search",
    "recommendation"
  ],
  "authors": [
    {
      "name": "Rafael Ernesto Espinosa Santiesteban",
      "email": "rernesto.espinosa@gmail.com"
    }
  ],
  "license": "MIT",
  "type": "library",
  "require": {
    "php": ">=8.2",
    "ext-json": "*",
    "ext-openssl": "*",
    "ext-curl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.5",
    "symfony/var-dumper": "^7.4",
    "friendsofphp/php-cs-fixer": "^3.92",
    "phpstan/phpstan": "^2.1"
  },
  "suggest": {
    "wamania/php-stemmer": "Required for stemming support (Porter/Snowball)"
  },
  "autoload": {
    "psr-4": {
      "CoralMedia\\PhpIr\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CoralMedia\\PhpIr\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "stable"
}
